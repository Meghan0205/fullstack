<!-- Add this within your HTML file where notifications should appear -->
<div id="notification" class="notification"></div>


/* Add this to your CSS file to style the notification */
.notification {
  display: none;
  position: fixed;
  top: 10px;
  right: 10px;
  background-color: #4CAF50; /* Green background color */
  color: white;
  padding: 10px;
  border-radius: 5px;
  z-index: 999; /* Ensure it's on top of other elements */
}


// phonebook.js

// Function to show a notification with a message
function showNotification(message, type = 'success') {
  const notification = document.getElementById('notification');
  notification.textContent = message;
  notification.classList.add(type); // Apply styling based on the type (e.g., 'success' for green)

  // Show the notification
  notification.style.display = 'block';

  // Automatically hide the notification after a delay (e.g., 3 seconds)
  setTimeout(() => {
    hideNotification();
  }, 3000); // Adjust the delay as needed (3 seconds in this example)
}

// Function to hide the notification
function hideNotification() {
  const notification = document.getElementById('notification');
  notification.style.display = 'none';
  notification.textContent = '';
  notification.classList.remove('success'); // Remove styling
}

// Example usage when a successful operation is executed (e.g., contact added)
try {
  // Add contact logic here
  // ...

  // Show a success notification
  showNotification('Contact added successfully', 'success');
} catch (error) {
  // Handle errors
}


/* CSS for different notification types */
.notification.success {
  background-color: #4CAF50; /* Green for success */
}

.notification.error {
  background-color: #f44336; /* Red for error */
}

.notification.info {
  background-color: #2196F3; /* Blue for info */
}
