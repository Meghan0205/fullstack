app.get('/api/persons/:id', (req, res, next) => {
  const id = req.params.id;

  // Find the person by ID in the database
  Person.findById(id)
    .then(person => {
      if (person) {
        res.json(person);
      } else {
        res.status(404).end(); // Entry not found
      }
    })
    .catch(error => {
      // Handle the error and pass it to the error handling middleware
      next(error);
    });
});
