const express = require('express');
const path = require('path');
const app = express();

// Serve the static files from the build directory
app.use(express.static(path.join(__dirname, 'frontend-directory/build')));

// Define your API endpoints and other backend routes here...

// Handle all other requests and serve the index.html
app.get('*', (req, res) => {
  res.sendFile(path.join(__dirname, 'frontend-directory/build/index.html'));
});

const port = process.env.PORT || 3001;
app.listen(port, () => {
  console.log(`Server is running on port ${port}`);
});
