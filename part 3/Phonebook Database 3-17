app.put('/api/phonebook/:id', (req, res, next) => {
  const id = req.params.id;
  const { number } = req.body;

  // Update the phone number of the entry with the given ID
  Person.findByIdAndUpdate(id, { number }, { new: true })
    .then(updatedPerson => {
      if (updatedPerson) {
        res.json(updatedPerson);
      } else {
        res.status(404).end(); // Entry not found
      }
    })
    .catch(error => {
      // Handle the error and pass it to the error handling middleware
      next(error);
    });
});
