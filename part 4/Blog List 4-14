describe('Blog API Tests', () => {
  // ... previous tests ...

  test('DELETE /api/blogs/:id deletes a specific blog post', async () => {
    const newBlog = {
      title: 'Test Blog Post',
      author: 'John Doe',
      url: 'http://example.com',
      likes: 5,
    };

    const response = await api.post('/api/blogs').send(newBlog);

    const deletedBlog = response.body;
    const deleteResponse = await api.delete(`/api/blogs/${deletedBlog.id}`);

    expect(deleteResponse.status).toBe(204);

    // Verify that the deleted blog doesn't exist anymore
    const blogsAfterDelete = await api.get('/api/blogs');
    const deletedBlogInDb = blogsAfterDelete.body.find((b) => b.id === deletedBlog.id);

    expect(deletedBlogInDb).toBeUndefined();
  });
});
