const mongoose = require('mongoose');
const Blog = require('../models/blog'); // Adjust the path to your Blog model
const app = require('../app'); // Import your Express app
const supertest = require('supertest');
const api = supertest(app);

beforeAll(async () => {
  // Connect to a test database (you should create a separate test database)
  await mongoose.connect('your-test-database-connection-string', {
    useNewUrlParser: true,
    useUnifiedTopology: true,
  });
});

describe('Blog API Tests', () => {
  test('Responds with 400 Bad Request if "title" is missing', async () => {
    const newBlog = {
      author: 'John Doe',
      url: 'http://example.com',
    };

    const response = await api.post('/api/blogs').send(newBlog);

    expect(response.status).toBe(400); // HTTP 400 Bad Request
  });

  test('Responds with 400 Bad Request if "url" is missing', async () => {
    const newBlog = {
      title: 'Test Blog Post',
      author: 'John Doe',
    };

    const response = await api.post('/api/blogs').send(newBlog);

    expect(response.status).toBe(400); // HTTP 400 Bad Request
  });
});

afterAll(async () => {
  // Disconnect from the test database
  await mongoose.connection.close();
});
